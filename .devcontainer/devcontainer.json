// ref. https://github.com/Microsoft/vscode-remote-try-python
{
	"name": "recommend_sparkFM",
  
	// Use docker-compose.extend.yml to run a command that keeps the container running.
	"dockerComposeFile": ["../docker-compose.yml"],
	"service": "recommend_sparkFM",
	"workspaceFolder": "/recommend_sparkFM",
	"shutdownAction": "stopCompose",
  
	// Comment out the next line to run as root instead. Linux users,
	// update Dockerfile with your user's UID/GID if not 1000.
	"remoteUser": "vscode",
  
	// Use 'settings' to set *default* container specific settings.json values on container create.
	// You can edit these settings after create using File > Preferences > Settings > Remote.
	"settings": {
	  "files.eol": "\n",
	  "terminal.integrated.profiles.linux": {
		  "bash": {
			  "path": "/bin/bash"
		  }
	  },
	  "python.pythonPath": "/usr/local/bin/python",
	  "python.linting.pylintEnabled": false,
	  "python.linting.enabled": true,
	  "python.linting.flake8Enabled": true,
	  "python.linting.flake8Args": [
		  "--max-line-length",
		  "120",
		  "--max-complexity",
		  "20"
	  ],
	  "python.formatting.provider": "black",
	  "editor.formatOnSave": true,
	  "python.linting.mypyEnabled": true,
	  "python.testing.pytestArgs": ["tests", "--verbose", "--showlocals"],
	  "python.testing.pytestEnabled": true,
	  "python.jediEnabled": false,
	  "python.languageServer": "Pylance",
	  "python.analysis.typeCheckingMode": "basic",
	  "python.analysis.diagnosticMode": "workspace",
	  "pythonTestExplorer.testFramework": "pytest",
	  "editor.codeActionsOnSave": {
		"source.organizeImports": true
	  },
	  "[python]": {
		"editor.tabSize": 4
	  },
	  "[json]": {
		"editor.tabSize": 2
	  },
	  "[yaml]": {
		"editor.tabSize": 2
	  },
	  "autoDocstring.docstringFormat": "numpy",
	  "autoDocstring.startOnNewLine": false,
	  "liveServer.settings.port": 5500
	},
	// Specifies a command to run after the container is created
	// "postCreateCommand": "sudo pip install -r requirements.txt && sudo pip install -r requirements_dev.txt",
	"extensions": [
	  "ms-python.python",
	  "esbenp.prettier-vscode",
	  "njpwerner.autodocstring",
	  "redhat.vscode-yaml",
	  "ritwickdey.liveserver",
	  "formulahendry.vscode-mysql",
	  "humao.rest-client",
	  "ms-python.vscode-pylance",
	  "VisualStudioExptTeam.vscodeintellicode",
	  "eamodio.gitlens",
	  "littlefoxteam.vscode-python-test-adapter"
	],
	"postCreateCommand": "pip install -r requirements.txt && pip install -r requirements-dev.txt",
  }
